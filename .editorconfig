# Please see for details http://editorconfig.org

root = true

[*]
indent_style = space
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true
indent_size = 2

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.{py,rst,ini}]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

